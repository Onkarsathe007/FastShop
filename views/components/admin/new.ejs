<% layout("./template/boilerplate.ejs") %>

  <form action="/products/new" method="POST" enctype="multipart/form-data"
    class="mt-12 max-w-4xl mx-auto bg-white border rounded-xl shadow-md p-8 space-y-8">

    <h2 class="text-2xl font-bold text-gray-900">Create New Product</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

      <!-- Product Images -->
      <div class="md:col-span-2">
        <label class="block text-sm font-semibold text-gray-700 mb-2">Product Images (URLs)</label>
        <div class="space-y-3"> 
          <input type="file" name="images">
          <input type="file" name="images">
          <input type="file" name="images">
        </div>
      </div>

      <!-- Thumbnail URL -->
      <div class="md:col-span-2">
        <label class="block text-sm font-semibold text-gray-700 mb-1">Thumbnail URL</label>
        <input type="url" name="thumbnail" placeholder="https://example.com/thumbnail.jpg"
          class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500" />
      </div>

      <!-- Product Title -->
      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1">Product Title</label>
        <input type="text" name="title"
          class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500" />
      </div>

      <!-- Brand -->
      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1">Brand</label>
        <input type="text" name="brand"
          class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500" />
      </div>

      <!-- SKU -->
      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1">SKU</label>
        <input type="text" name="sku"
          class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500" />
      </div>

      <!-- Price -->
      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1">Price ($)</label>
        <input type="number" step="0.01" name="price"
          class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500" />
      </div>

      <!-- Discount -->
      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1">Discount (%)</label>
        <input type="number" step="0.01" name="discountPercentage"
          class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500" />
      </div>

      <!-- Stock -->
      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1">Stock</label>
        <input type="number" name="stock"
          class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500" />
      </div>

      <!-- Category -->
      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1">Category</label>
        <input type="text" name="category"
          class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500" />
      </div>

      <!-- Weight -->
      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1">Weight (kg)</label>
        <input type="number" step="0.01" name="weight"
          class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500" />
      </div>

      <!-- MOQ -->
      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1">Minimum Order Quantity</label>
        <input type="number" name="minimumOrderQuantity"
          class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500" />
      </div>

      <!-- Width -->
      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1">Width (cm)</label>
        <input type="number" step="0.1" name="dimensions[width]"
          class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500" />
      </div>

      <!-- Height -->
      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1">Height (cm)</label>
        <input type="number" step="0.1" name="dimensions[height]"
          class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500" />
      </div>

      <!-- Depth -->
      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1">Depth (cm)</label>
        <input type="number" step="0.1" name="dimensions[depth]"
          class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500" />
      </div>

      <!-- Return Policy -->
      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1">Return Policy</label>
        <input type="text" name="returnPolicy"
          class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500" />
      </div>

      <!-- Shipping Info -->
      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1">Shipping Information</label>
        <input type="text" name="shippingInformation"
          class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500" />
      </div>

      <!-- Warranty Info -->
      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1">Warranty Information</label>
        <input type="text" name="warrantyInformation"
          class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500" />
      </div>
    </div>

    <!-- Description -->
    <div>
      <label class="block text-sm font-semibold text-gray-700 mb-1">Description</label>
      <textarea name="description" rows="4"
        class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500"></textarea>
    </div>

    <!-- Submit -->
    <div class="flex justify-end">
      <button type="submit"
        class="bg-blue-600 text-white font-semibold px-6 py-3 rounded-lg hover:bg-blue-700 transition duration-200">
        Create Product
      </button>
    </div>

  </form>
